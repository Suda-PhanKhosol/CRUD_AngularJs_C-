@model WebApplication.Models.EmployeeModel;
@{
    ViewData["Title"] = "Home Page";
    var name = ViewBag.Name;
}

<div ng-controller="HomeController">
    <div class="text-center">
        <h1 class="display-4">Welcome {{text}}</h1>
    </div>
    <div>
        <input type="text" ng-model="text" />
        <input type="button" value="OK Submit" ng-click="Submit();" />
    </div>
    <div class="row pt-3">
        <div class="col-md-6">
            <select class="form-control" ng-options="item.id as item.label for item in items" ng-model="user.type"></select>
        </div>
    </div>
    <div class="row pt-3">
        <div class="col-md-5">
            <input type="text" ng-model="user.username" class="form-control" placeholder="Username" />
        </div>
        <div class="col-md-5">
            <input type="password" ng-model="user.password" class="form-control" placeholder="Password" />
        </div>
        <div class="col-md-2">
            <input type="button" value="Login" class="btn btn-primary btn-block" ng-show="is.CanSubmit()" ng-click="Login();" />
        </div>
    </div>
    <div>
        <p>
            @ViewBag.Name<br />
            <hr />
            En: @Model.En<br />
            Name: @Model.Name<br />
            Department: @Model.Department<br />
            Age: @Model.Age
        </p>
    </div>
</div>

@section Scripts{ 
    <script src="~/js/apps/HomeController.js"></script>
}
